<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>uex.javapp</groupId>
  <artifactId>Trogol</artifactId>
  <name>Trogol</name>
  <version>2.0.0.0</version>
  <description>Aplicación Trogol</description>
  <url>https://www.antoniohorrillo.com</url>
  <inceptionYear>2016</inceptionYear>
  <developers>
    <developer>
      <id>Web Developer</id>
      <name>Antonio Horrillo Horrillo</name>
      <email>contacto@antoniohorrillo.com</email>
      <timezone>UTC+1</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</name>
      <url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>https://www.antoniohorrillo.com</connection>
    <url>https://www.antoniohorrillo.com</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${compiler.plugin}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${jar.plugin}</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>lib/</classpathPrefix>
              <mainClass>trogol.Trogol</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>install</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/lib</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${shade.plugin}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>trogol.Trogol</mainClass>
            </transformer>
          </transformers>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
                <exclude>META-INF/*.EC</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>${launch4j.plugin}</version>
        <executions>
          <execution>
            <id>l4j-clui</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <headerType>gui</headerType>
              <outfile>${project.build.directory}/Trogol.exe</outfile>
              <classPath>
                <mainClass>trogol.Trogol</mainClass>
                <jarLocation>%EXEDIR%/lib/</jarLocation>
              </classPath>
              <icon>src/main/resources/Trogol.ico</icon>
              <singleInstance>
                <mutexName>Trogol</mutexName>
              </singleInstance>
              <jre>
                <minVersion>${java.version}.0</minVersion>
              </jre>
              <versionInfo>
                <fileVersion>2.0.0.0</fileVersion>
                <txtFileVersion>Versión 2.0</txtFileVersion>
                <fileDescription>Trogol</fileDescription>
                <copyright>Antonio Horrillo Horrillo</copyright>
                <productVersion>2.0.0.0</productVersion>
                <txtProductVersion>Versión 2.0</txtProductVersion>
                <productName>Trogol</productName>
                <internalName>Trogol.jar</internalName>
                <originalFilename>Trogol.exe</originalFilename>
              </versionInfo>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <shade.plugin>2.4.3</shade.plugin>
    <java.version>1.8</java.version>
    <dependency.plugin>2.10</dependency.plugin>
    <compiler.plugin>3.5.1</compiler.plugin>
    <jar.plugin>2.6</jar.plugin>
    <maven.compiler.target>1.8</maven.compiler.target>
    <launch4j.plugin>1.7.8</launch4j.plugin>
    <log4j.version>1.2.17</log4j.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
</project>

